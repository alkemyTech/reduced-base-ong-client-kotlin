<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/error_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_error_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_error_general"
        app:layout_constraintEnd_toEndOf="@+id/tv_error_general"
        app:layout_constraintStart_toStartOf="@+id/tv_error_general"
        app:srcCompat="@drawable/ic_bloqueado"
        app:tint="@color/light_blue_ray"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_error_general"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:lineSpacingExtra="8sp"
        android:text="@string/error_general_tv_message"
        android:textAlignment="center"
        android:textAppearance="@style/Detail"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bt_reintentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/light_blue"
        android:text="@string/error_bt_retry"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tv_error_general"
        app:layout_constraintStart_toStartOf="@+id/tv_error_general"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_general"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>